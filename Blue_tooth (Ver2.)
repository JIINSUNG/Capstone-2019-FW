#include <SoftwareSerial.h>
SoftwareSerial hc06(2,3); //Tx, Rx
char message;

void setup()
{
     Serial.begin(9600);
     hc06.begin(9600);
}

void loop()
{
if(Serial.available())
{  
message = Serial.read();
 
if (message == 'a')
{    
    hc06.write("a1");
}

else if (message == 'b')
{    
     hc06.write("a2");
}
else if (message == 'c')
{      

     hc06.write("a3");
}
else if (message == 'd')
{     
     Serial.write("2층 내부 화재");
     hc06.write("a4");
}

else if (message =='q')
{
  hc06.write("a5");
}

else
;
}
delay(300);
}
