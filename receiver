int LED = 12;
char message;

void setup() 
{
Serial.begin(9600);
pinMode(LED,OUTPUT);
}

void loop() 
{
  // put your main  code here, to run repeatedly:
if(Serial.available())
{
  message = Serial.read();
  if(message == '1') 
  {
    digitalWrite(LED, HIGH);
    delay(100);
  }
else
{
  digitalWrite(LED,LOW);
}
}
}
